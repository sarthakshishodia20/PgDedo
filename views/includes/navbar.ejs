<!-- Simple Airbnb-style Header -->
<header class="main-header">
    <div class="header-container">
        <div class="header-left">
            <a href="/listings" class="brand-logo">
                <i class="fas fa-home"></i>
                <span>PG Dedo</span>
            </a>
        </div>

        <div class="header-center">
            <nav class="main-nav">
                <a href="/listings" class="nav-link">All PGs</a>
                <% if (currentUser && currentUser.userType === 'owner') { %>
                    <a href="/listings/new" class="nav-link">Add PG</a>
                <% } %>
            </nav>
        </div>

        <div class="header-right">
            <% if (currentUser) { %>
                <div class="user-menu">
                    <div class="user-info">
                        <i class="fas fa-user-circle"></i>
                        <span><%= currentUser.fullName %></span>
                        <span class="user-badge <%= currentUser.userType === 'owner' ? 'owner' : 'student' %>">
                            <%= currentUser.userType === 'owner' ? 'Owner' : 'Student' %>
                        </span>
                    </div>
                    <a href="/logout" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        Logout
                    </a>
                </div>
            <% } else { %>
                <div class="auth-links">
                    <a href="/login" class="btn btn-outline-primary">Login</a>
                    <a href="/register" class="btn btn-primary">Sign up</a>
                </div>
            <% } %>
        </div>
    </div>
</header>
