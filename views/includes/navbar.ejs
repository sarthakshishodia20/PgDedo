<!-- Sidebar Toggle Button -->
<button class="sidebar-toggle" id="sidebarToggle">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar Overlay -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

<!-- Vertical Sidebar -->
<nav class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <div class="sidebar-brand">
            <i class="fas fa-home me-2"></i>
            <span class="brand-text">PG Dedo</span>
        </div>
    </div>

    <div class="sidebar-content">
        <!-- Main Navigation -->
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/listings">
                    <i class="fas fa-list"></i>
                    <span class="nav-text">All PGs</span>
                </a>
            </li>
            <% if (currentUser && currentUser.userType === 'owner') { %>
                <li class="nav-item">
                    <a class="nav-link" href="/listings/new">
                        <i class="fas fa-plus"></i>
                        <span class="nav-text">Add New PG</span>
                    </a>
                </li>
            <% } %>
        </ul>

        <% if (currentUser) { %>
            <div class="sidebar-divider"></div>

            <!-- User Info Section -->
            <div class="sidebar-user-info">
                <div class="user-avatar">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="user-details">
                    <div class="user-name"><%= currentUser.fullName %></div>
                    <div class="user-type">
                        <span class="badge bg-<%= currentUser.userType === 'owner' ? 'success' : 'info' %>">
                            <%= currentUser.userType === 'owner' ? 'Owner' : 'Student' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- User Actions -->
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt"></i>
                        <span class="nav-text">Logout</span>
                    </a>
                </li>
            </ul>
        <% } else { %>
            <div class="sidebar-divider"></div>

            <!-- Authentication Links -->
            <ul class="sidebar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span class="nav-text">Login</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">
                        <i class="fas fa-user-plus"></i>
                        <span class="nav-text">Register</span>
                    </a>
                </li>
            </ul>
        <% } %>
    </div>

    <div class="sidebar-footer">
        <div class="sidebar-info">
            <i class="fas fa-building"></i>
            <span class="info-text">PG Management</span>
        </div>
    </div>
</nav>
